<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom-Right and Bottom-Left Shadow Layer -->
    <item android:left="2dp" android:right="2dp" android:bottom="6dp"> <!-- Offset shadow to show only on the bottom edges -->
        <shape>
            <!-- Use a radial gradient to create a soft shadow on bottom-right and bottom-left -->
            <gradient
                android:type="radial"
                android:gradientRadius="50dp"
                android:centerX="0.5"
                android:startColor="#22000000"
            android:endColor="#00000000"
            android:centerColor="#33000000" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- Main EditText Background -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>
