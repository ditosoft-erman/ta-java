            android:layout_marginLeft="35dp"
            android:background="@drawable/baseline_clear_all_45" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="342dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/baseline_circle_40"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="RENT TOOL"
            android:textColor="#FFFFFF"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="35dp"
            />

        <ImageView
            android:layout_width="38dp"
            android:layout_height="43dp"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="350dp"
            android:background="@drawable/baseline_camera_alt_40"/>


        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/backgroundwhiteandraduis">


            <ImageView
                android:layout_width="180dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/backgroundcolortools"
                android:src="@drawable/yabe"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introducing"
