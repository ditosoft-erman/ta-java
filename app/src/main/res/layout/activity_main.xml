<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainActivity"
    android:background="#F5F5F5">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="340dp"
        android:src="@drawable/logo"
        android:background="@drawable/circleprofile"
        android:clipToOutline="true"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_arrow_back_black"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="Registration Form"
        android:textSize="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="75dp"
        android:textColor="#000000"/>


    <EditText

        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/logintextfield"
        android:hint="First name"
        android:textColorHint="#d1cccb"
        android:textColor="#000000"
        android:paddingLeft="20dp"
        android:textSize="20dp" />

    <EditText

        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="288dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/logintextfield"
        android:elevation="6dp"
        android:hint="M.I."
        android:paddingLeft="30dp"
        android:textColor="#000000"
        android:textColorHint="#d1cccb"
        android:textSize="20dp" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="210dp"
        android:background="@drawable/logintextfield"
        android:hint="Last name"
        android:textColorHint="#d1cccb"
        android:textColor="#000000"
        android:paddingLeft="20dp"
        android:textSize="20dp" />

    <EditText
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="270dp"
            android:background="@drawable/logintextfield"
            android:hint="Address"
        android:textColor="#000000"
            android:textColorHint="#d1cccb"
            android:paddingLeft="20dp"
            android:textSize="20dp" />


    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/registertextview"
        android:drawableLeft="@drawable/phi"
        android:paddingLeft="12dp"
        android:gravity="center"
        android:text="+63"
        android:textSize="20dp" />

    <EditText

            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginLeft="148dp"
            android:layout_marginTop="330dp"
            android:background="@drawable/logintextfield"
            android:hint="Phone No."
            android:textColor="#000000"
            android:textColorHint="#d1cccb"
            android:inputType="phone"
            android:paddingLeft="20dp"
            android:textSize="20dp" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="390dp"
        android:textColor="#000000"
        android:background="@drawable/logintextfield"
        android:hint="Email"
        android:paddingLeft="20dp"
        android:textColorHint="#d1cccb"
        android:textSize="20dp" />

    <EditText
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="450dp"
            android:background="@drawable/logintextfield"
            android:hint="Password"
        android:textColor="#000000"
            android:textColorHint="#d1cccb"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textSize="20dp" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="510dp"
        android:background="@drawable/logintextfield"
        android:hint="Re-enter Password"
        android:textColorHint="#d1cccb"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:paddingLeft="20dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="572dp"
        android:text="By signing up, you agree to our"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="570dp"
        android:gravity="center"
        android:text="@string/underline_text"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="and"
        android:layout_marginTop="592dp"
        android:layout_marginLeft="148dp"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="590dp"
        android:layout_marginLeft="173dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="normal"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:text="@string/Privacy" />


    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="630dp"
        android:background="@drawable/blackbackgroundandwithraduis"
        android:gravity="center"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="690dp"
        android:background="@drawable/loginborderblack"
        android:gravity="center"
        android:text="Login"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <View
        android:layout_width="130dp"
        android:layout_height="4dp"
        android:background="@android:color/black"
        android:layout_marginTop="770dp" />
    <View
        android:layout_width="140dp"
        android:layout_height="4dp"
        android:background="@android:color/black"
        android:layout_marginTop="770dp"
        android:layout_marginLeft="280dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="761dp"
        android:layout_marginLeft="150dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Or Sign up with"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="790dp"
        android:layout_marginLeft="110dp"
        android:background="@drawable/log"/>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="790dp"
        android:layout_marginLeft="190dp"
        android:background="@drawable/fac"/>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="790dp"
        android:layout_marginLeft="260dp"
        android:background="@drawable/bkapl"/>


</RelativeLayout>

